<Controls:MetroWindow x:Class="XFilesArchive.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XFilesArchive.UI"
        xmlns:view="clr-namespace:XFilesArchive.UI.View"
       xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
         xmlns:viewModel="clr-namespace:XFilesArchive.UI.ViewModel"
        mc:Ignorable="d"
        Icon="/XFilesArchive.UI;component/appico.ico"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModel:DriveDetailViewModel}">
            <view:DetailView/>
        </DataTemplate>

        <!--<DataTemplate DataType="{x:Type viewModel:MeetingDetailViewModel}">
            <view:MeetingDetailView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ProgrammingLanguageDetailViewModel}">
            <view:ProgrammingLanguageDetailView/>
        </DataTemplate>-->
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="Help"
            CanExecute="HelpCanExecute" Executed="HelpExecuted"/>
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Command="Help" Key="F2"/>
        <KeyBinding Command="NotACommand" Key="F1"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <view:Menu  Grid.ColumnSpan="2"/>
        
        <view:Toolbar  Grid.ColumnSpan="2" Grid.Row="1"/>

        <!--<Frame x:Name="Main" Margin="0,0,0,0" Grid.Row="2"/>-->
        
        <view:NavigationView DataContext="{Binding NavigationViewModel}" Grid.Row="2"/>
        <TabControl Grid.Column="1" Grid.Row="2" 
                    ItemsSource="{Binding DetailViewModels}"
                    SelectedItem="{Binding SelectedDetailViewModel,Mode=TwoWay}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}"                    
                       >
                    <Setter Property="Background" Value="#333333"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>

            </TabControl.ItemContainerStyle>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Drive.Title}"/>
                        <TextBlock Text="*" Visibility="{Binding HasChanges,
                        Converter={StaticResource booleanToVisibilityConverter}}"/>
                        <Button Content="X" VerticalAlignment="Top" Margin="2 0 2 2"
                                Command="{Binding CloseDetailViewModelCommand}" 
                                Style="{StaticResource ChromelessButtonStyle}"
                                FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Controls:MetroWindow>